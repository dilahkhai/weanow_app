<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.applen.myapplication.ui.SplashScreenActivity">
    
    <ImageView
        android:id="@+id/iv_logo_weanow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_weanow"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@id/iv_logo_weanow"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:indeterminateTint="@color/primaryColor"/>

    <ImageView
        android:id="@+id/iv_applen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/applen_ss"
        app:layout_constraintTop_toBottomOf="@id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>